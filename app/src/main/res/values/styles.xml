<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/dayGreenTheme</item>
        <item name="md_medium_font">IRANSansMobile.ttf</item>
        <item name="md_regular_font">IRANSansMobile.ttf</item>
        <item name="fontFamily">@font/main_font</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="AppTheme.Launcher" parent="BaseTheme">
        <item name="android:windowBackground">@drawable/theme</item>
    </style>

    <style name="DayBlueTheme" parent="BaseTheme">
        <item name="colorAccent">@color/dayBlueTheme</item>
    </style>

    <style name="DayRedTheme" parent="BaseTheme">
        <item name="colorAccent">@color/dayRedTheme</item>
    </style>

    <style name="DayPinkTheme" parent="BaseTheme">
        <item name="colorAccent">@color/dayPinkTheme</item>
    </style>

    <style name="DayCyanTheme" parent="BaseTheme">
        <item name="colorAccent">@color/dayCyanTheme</item>
    </style>

    <style name="DayYellowTheme" parent="BaseTheme">
        <item name="colorAccent">@color/dayYellowTheme</item>
    </style>

    <style name="DayOrangeTheme" parent="BaseTheme">
        <item name="colorAccent">@color/dayOrangeTheme</item>
    </style>

    <style name="DarkBlueTheme" parent="BaseTheme">
        <item name="colorAccent">@color/darkBlueTheme</item>
    </style>

    <style name="DarkRedTheme" parent="BaseTheme">
        <item name="colorAccent">@color/darkRedTheme</item>
    </style>

    <style name="DarkPinkTheme" parent="BaseTheme">
        <item name="colorAccent">@color/darkPinkTheme</item>
    </style>

    <style name="DarkCyanTheme" parent="BaseTheme">
        <item name="colorAccent">@color/darkCyanTheme</item>
    </style>

    <style name="DarkYellowTheme" parent="BaseTheme">
        <item name="colorAccent">@color/darkYellowTheme</item>
    </style>

    <style name="DarkOrangeTheme" parent="BaseTheme">
        <item name="colorAccent">@color/darkOrangeTheme</item>
    </style>

    <style name="NightBlueTheme" parent="BaseTheme">
        <item name="colorAccent">@color/nightBlueTheme</item>
    </style>

    <style name="NightRedTheme" parent="BaseTheme">
        <item name="colorAccent">@color/nightRedTheme</item>
    </style>

    <style name="NightPinkTheme" parent="BaseTheme">
        <item name="colorAccent">@color/nightPinkTheme</item>
    </style>

    <style name="NightCyanTheme" parent="BaseTheme">
        <item name="colorAccent">@color/nightCyanTheme</item>
    </style>

    <style name="NightYellowTheme" parent="BaseTheme">
        <item name="colorAccent">@color/nightYellowTheme</item>
    </style>

    <style name="NightOrangeTheme" parent="BaseTheme">
        <item name="colorAccent">@color/nightOrangeTheme</item>
    </style>

    <style name="MySearch" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:gravity">end|right</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/dp12</item>
    </style>

    <style name="remove_error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/dp12</item>
    </style>

    <style name="Theme.AppCompat.Translucent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="TextIconAppearance.all" parent="android:TextAppearance">
        <item name="fontFamily">@font/font_icons</item>
        <item name="android:textSize">@dimen/dp22</item>
    </style>

    <style name="TextIconAppearance_toolbar" parent="android:TextAppearance">
        <item name="fontFamily">@font/font_icons</item>
        <item name="android:textSize">@dimen/dp22</item>
    </style>


    <style name="DialogAnimationUp">
        <item name="android:windowEnterAnimation">@anim/translate_enter_up</item>
        <item name="android:windowExitAnimation">@anim/translate_exit_up</item>
    </style>

    <style name="DialogAnimationDown">
        <item name="android:windowEnterAnimation">@anim/translate_enter_down</item>
        <item name="android:windowExitAnimation">@anim/translate_exit_down</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_exit_in_right</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_exit_out_left</item>
    </style>

    <!--custom theme-->

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="Widget.Design.TopSheet.Modal" parent="android:Widget">
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/dp8</item>
        <item name="android:background">@drawable/top_sheet_background</item>
        <item name="behavior_hideable">true</item>
    </style>

    <style name="Animation.Design.TopSheetDialog" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/top_sheet_slide_in</item>
        <item name="android:windowExitAnimation">@anim/top_sheet_slide_out</item>
    </style>


    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="baseFontIcon">
        <item name="fontFamily">@font/font_icons</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/dp22</item>
    </style>

    <style name="chatAttachmentAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/translate_enter_down</item>
        <item name="android:windowExitAnimation">@anim/translate_exit_down</item>
    </style>

    <style name="IGapRootViewStyle">
        <item name="android:layoutDirection">locale</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="BaseIGapButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/dp12</item>
        <item name="android:textSize">@dimen/dp16</item>
    </style>

    <style name="BaseIGapStrokeButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@android:style/TextAppearance</item>
        <item name="cornerRadius">@dimen/dp18</item>
        <item name="android:textSize">@dimen/dp16</item>
        <item name="strokeWidth">@dimen/dp2</item>
    </style>

    <style name="iGapOutlinedButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/dp18</item>
        <item name="android:textSize">@dimen/dp16</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <declare-styleable name="ImageLoadingViewAttr">
        <attr name="rotate_duration" format="integer" />
        <attr name="circle_duration" format="integer" />
        <attr name="start_color" format="color" />
        <attr name="end_color" format="color" />
        <attr name="status" >
            <enum name="loading" value="0" />
            <enum name="clicked" value="1" />
            <enum name="unclicked" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ExpandableTextView">
        <attr name="trimLength" format="integer"/>
    </declare-styleable>
    <style name="ExoMediaButton.Play">
        <item name="android:visibility">gone</item>
    </style>

    <style name="ExoMediaButton.Pause">
        <item name="android:visibility">gone</item>
    </style>

    <style name="ExoMediaButton.Previous">
        <item name="android:visibility">gone</item>
    </style>

    <style name="ExoMediaButton.Next">
        <item name="android:visibility">gone</item>
    </style>

    <style name="ExoMediaButton.FastForward">
        <item name="android:visibility">gone</item>
    </style>

    <style name="ExoMediaButton.Rewind">
        <item name="android:visibility">gone</item>
    </style>

    <style name="TransparentDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>
</resources>
