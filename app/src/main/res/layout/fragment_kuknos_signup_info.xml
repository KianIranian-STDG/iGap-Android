<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewmodel"
            type="net.iGap.kuknos.viewmodel.KuknosSignupInfoVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/IGapRootViewStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pageContainer">

        <LinearLayout
            android:id="@+id/fragKuknosSIToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragKuknosSIToolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:paddingBottom="@dimen/dp20">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/fragKuknosSITitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="@string/kuknos_SignupInfo_title"
                    android:textColor="?iGapTitleTextColor"
                    android:textSize="@dimen/dp18"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.7" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/fragKuknosSIMessage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/kuknos_SignupInfo_desc"
                    android:textColor="?iGapTitleTextColor"
                    android:textSize="@dimen/dp16"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fragKuknosSITitle"
                    app:layout_constraintWidth_percent="0.7" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/internalUserIDHolder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fragKuknosSIMessage">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/fragKuknosSIUsernameHolder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:minHeight="48dp"
                        android:textColorHint="?iGapSubtitleTextColor"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@+id/fragKuknosSIUsernameText"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintWidth_percent="0.7">

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/fragKuknosSIUsername"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:gravity="start|center"
                            android:hint="@string/kuknos_SignupInfo_username"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:lines="1"
                            android:maxLines="1"
                            android:minHeight="48dp"
                            android:text="@={viewmodel.username}"
                            android:textColor="?iGapTitleTextColor"
                            android:textSize="@dimen/dp18" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/fragKuknosSIUsernameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/kuknos_SignupInfo_friendlyTial"
                        android:textColor="?iGapTitleTextColor"
                        android:textSize="@dimen/dp18"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@+id/fragKuknosSIUsernameHolder"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintLeft_toRightOf="@+id/fragKuknosSIUsernameHolder"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/fragKuknosSIUsernameHolder"
                        app:layout_constraintWidth_percent="0.2" />

                    <ProgressBar
                        android:id="@+id/fragKuknosSIProgress"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="@+id/fragKuknosSICheckUsername"
                        app:layout_constraintEnd_toStartOf="@+id/fragKuknosSICheckIcon"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/fragKuknosSICheckUsername" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/fragKuknosSICheckIcon"
                        style="@style/myIconTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:text="@string/icon_error"
                        app:layout_constraintBottom_toBottomOf="@+id/fragKuknosSICheckUsername"
                        app:layout_constraintEnd_toStartOf="@+id/fragKuknosSICheckUsername"
                        app:layout_constraintStart_toEndOf="@+id/fragKuknosSIProgress"
                        app:layout_constraintTop_toTopOf="@+id/fragKuknosSICheckUsername" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/fragKuknosSICheckUsername"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/kuknos_SignupInfo_checkUsername"
                        android:textColor="?iGapTitleTextColor"
                        android:textSize="@dimen/dp14"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/fragKuknosSICheckIcon"
                        app:layout_constraintTop_toBottomOf="@+id/fragKuknosSIUsernameHolder"
                        app:layout_constraintWidth_percent="0.5" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/fragKuknosSINameHolder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:minHeight="48dp"
                    android:textColorHint="?iGapSubtitleTextColor"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/internalUserIDHolder"
                    app:layout_constraintWidth_percent="0.7">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/fragKuknosSIName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:enabled="true"
                        android:gravity="start|center"
                        android:hint="@string/kuknos_SignupInfo_name"
                        android:inputType="text"
                        android:lines="1"
                        android:maxLines="1"
                        android:minHeight="48dp"
                        android:imeOptions="actionNext"
                        android:text="@={viewmodel.name}"
                        android:textColor="?iGapTitleTextColor"
                        android:textSize="@dimen/dp18" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/fragKuknosSIFamilyNameHolder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:minHeight="48dp"
                    android:textColorHint="?iGapSubtitleTextColor"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fragKuknosSINameHolder"
                    app:layout_constraintWidth_percent="0.7">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/fragKuknosSIFamilyName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:enabled="false"
                        android:gravity="start|center"
                        android:hint="@string/kuknos_login_tel_str"
                        android:inputType="phone"
                        android:lines="1"
                        android:maxLines="1"
                        android:minHeight="48dp"
                        android:maxLength="12"
                        android:digits="0123456789"
                        android:imeOptions="actionNext"
                        android:text="@={viewmodel.phoneNum}"
                        android:textColor="?iGapTitleTextColor"
                        android:textSize="@dimen/dp18" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/fragKuknosSI_NIDHolder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:minHeight="48dp"
                    android:textColorHint="?iGapSubtitleTextColor"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fragKuknosSIFamilyNameHolder"
                    app:layout_constraintWidth_percent="0.7">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/fragKuknosSI_NID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:enabled="true"
                        android:gravity="start|center"
                        android:hint="@string/kuknos_login_id_str"
                        android:inputType="numberDecimal"
                        android:lines="1"
                        android:maxLines="1"
                        android:maxLength="10"
                        android:minHeight="48dp"
                        android:digits="0123456789"
                        android:imeOptions="actionNext"
                        android:text="@={viewmodel.NID}"
                        android:textColor="?iGapTitleTextColor"
                        android:textSize="@dimen/dp18" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/fragKuknosSIEmailHolder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:minHeight="48dp"
                    android:textColorHint="?iGapSubtitleTextColor"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fragKuknosSI_NIDHolder"
                    app:layout_constraintWidth_percent="0.7">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/fragKuknosSIEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:gravity="start|center"
                        android:hint="@string/kuknos_SignupInfo_email"
                        android:imeOptions="actionDone"
                        android:inputType="textEmailAddress"
                        android:lines="1"
                        android:maxLines="1"
                        android:minHeight="48dp"
                        android:text="@={viewmodel.email}"
                        android:textColor="?iGapTitleTextColor"
                        android:textSize="@dimen/dp18" />
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/termsAndConditionCheck"
                    android:layout_marginTop="10dp"
                    android:button="@drawable/check_box_background"
                    android:onCheckedChanged="@{(v,isChecked)->viewmodel.termsOnCheckChange(isChecked)}"
                    app:layout_constraintStart_toStartOf="@+id/fragKuknosSIEmailHolder"
                    app:layout_constraintTop_toBottomOf="@+id/fragKuknosSIEmailHolder"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/termsAndConditionText"
                    android:layout_marginStart="@dimen/dp6"
                    android:layout_marginLeft="@dimen/dp6"
                    android:text="@string/ok"
                    android:textColor="?iGapTitleTextColor"
                    app:layout_constraintStart_toEndOf="@+id/termsAndConditionCheck"
                    app:layout_constraintEnd_toEndOf="@+id/fragKuknosSIEmailHolder"
                    app:layout_constraintTop_toBottomOf="@+id/termsAndConditionCheck"
                    app:layout_constraintBottom_toTopOf="@+id/termsAndConditionCheck"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/fragKuknosSISubmit"
                    style="@style/iGapButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp36"
                    android:minHeight="58dp"
                    android:onClick="@{()->viewmodel.onSubmitBtn()}"
                    android:text="@string/kuknos_SignupInfo_submitBtn"
                    android:textSize="@dimen/dp16"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/termsAndConditionText"
                    app:layout_constraintWidth_percent="0.6" />

                <ProgressBar
                    android:id="@+id/fragKuknosSIProgressV"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:elevation="2dp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="@+id/fragKuknosSISubmit"
                    app:layout_constraintEnd_toEndOf="@+id/fragKuknosSISubmit"
                    app:layout_constraintHeight_percent="0.06"
                    app:layout_constraintHorizontal_bias="0.05"
                    app:layout_constraintStart_toStartOf="@+id/fragKuknosSISubmit"
                    app:layout_constraintTop_toTopOf="@+id/fragKuknosSISubmit" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>