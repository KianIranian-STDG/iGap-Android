<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="net.iGap.viewmodel.FragmentPaymentChargeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/IGapRootViewStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/fpc_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/phoneNumberIcon"
            style="@style/primaryIconTextViewStyle"
            android:layout_width="@dimen/dp48"
            android:layout_height="@dimen/dp48"
            android:layout_margin="@dimen/dp16"
            android:text="@string/md_dialpad"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fpc_toolbar" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/phoneNumberEditText"
            style="@style/iGapEditTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp8"
            android:layout_marginLeft="@dimen/dp8"
            android:layout_marginEnd="@dimen/dp16"
            android:layout_marginRight="@dimen/dp16"
            android:afterTextChanged="@{(phoneNumber)->viewModel.phoneNumberTextChangeListener(phoneNumber.toString())}"
            android:background="@drawable/background_cancel_money_action"
            android:gravity="center"
            android:hint="@string/phone_number"
            android:inputType="phone"
            android:maxLength="11"
            android:padding="8dp"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            android:textSize="@dimen/dp16"
            app:layout_constraintBottom_toBottomOf="@id/phoneNumberIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/phoneNumberIcon"
            app:layout_constraintTop_toTopOf="@id/phoneNumberIcon" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/phoneNumberExample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            android:text="@string/ex_mobile_phone"
            android:textColor="@color/gray"
            android:textSize="@dimen/dp10"
            app:layout_constraintStart_toStartOf="@id/phoneNumberEditText"
            app:layout_constraintTop_toBottomOf="@id/phoneNumberEditText" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/fpc_checkBox_trabord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp8"
            android:layout_marginTop="@dimen/dp8"
            android:layout_marginEnd="@dimen/dp8"
            android:button="@drawable/check_box_background"
            android:onCheckedChanged="@{(view,isChecked)->viewModel.checkBoxTarabordChanged(isChecked,phoneNumberEditText.getEditableText().toString())}"
            android:text="@string/trabord"
            android:textColor="?iGapTitleTextColor"
            android:textSize="@dimen/dp16"
            android:visibility="@{viewModel.showDetail}"
            app:layout_constraintStart_toStartOf="@id/phoneNumberIcon"
            app:layout_constraintTop_toBottomOf="@id/phoneNumberExample" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/operatorIcon"
            style="@style/primaryIconTextViewStyle"
            android:layout_width="@dimen/dp48"
            android:layout_height="@dimen/dp48"
            android:layout_marginTop="@dimen/dp8"
            android:text="@string/md_format_list_bulleted"
            android:textStyle="bold"
            android:visibility="@{viewModel.observeTarabord}"
            app:layout_constraintEnd_toEndOf="@id/phoneNumberIcon"
            app:layout_constraintStart_toStartOf="@id/phoneNumberIcon"
            app:layout_constraintTop_toBottomOf="@id/fpc_checkBox_trabord" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/fpc_spinner_operator"
            android:layout_width="0dp"
            android:background="@color/green"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp44"
            android:onItemSelected="@{(parent,view,position,id)->viewModel.onItemSelecteSpinerOperator(position)}"
            android:visibility="@{viewModel.observeTarabord}"
            app:layout_constraintBottom_toBottomOf="@id/operatorIcon"
            app:layout_constraintEnd_toEndOf="@id/phoneNumberEditText"
            app:layout_constraintStart_toStartOf="@id/phoneNumberEditText"
            app:layout_constraintTop_toTopOf="@id/operatorIcon" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/background_cancel_money_action"
            android:visibility="@{viewModel.observeTarabord}"
            app:layout_constraintBottom_toBottomOf="@id/fpc_spinner_operator"
            app:layout_constraintEnd_toEndOf="@id/fpc_spinner_operator"
            app:layout_constraintStart_toStartOf="@id/fpc_spinner_operator"
            app:layout_constraintTop_toTopOf="@id/fpc_spinner_operator" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/chargeTypeIcon"
            style="@style/primaryIconTextViewStyle"
            android:layout_width="@dimen/dp48"
            android:layout_height="@dimen/dp48"
            android:layout_marginTop="@dimen/dp8"
            android:text="@string/md_format_list_bulleted"
            android:textStyle="bold"
            android:visibility="@{viewModel.showDetail}"
            app:layout_constraintEnd_toEndOf="@id/phoneNumberIcon"
            app:layout_constraintStart_toStartOf="@id/phoneNumberIcon"
            app:layout_constraintTop_toBottomOf="@id/operatorIcon" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/fpc_spinner_ChargeType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp44"
            android:onItemSelected="@{(parent,view,position,id)->viewModel.onItemSelecteSpinerType(position)}"
            android:visibility="@{viewModel.showDetail}"
            app:layout_constraintBottom_toBottomOf="@id/chargeTypeIcon"
            app:layout_constraintEnd_toEndOf="@id/phoneNumberEditText"
            app:layout_constraintStart_toStartOf="@id/phoneNumberEditText"
            app:layout_constraintTop_toTopOf="@id/chargeTypeIcon" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/background_cancel_money_action"
            android:visibility="@{viewModel.showDetail}"
            app:layout_constraintBottom_toBottomOf="@id/fpc_spinner_ChargeType"
            app:layout_constraintEnd_toEndOf="@id/fpc_spinner_ChargeType"
            app:layout_constraintStart_toStartOf="@id/fpc_spinner_ChargeType"
            app:layout_constraintTop_toTopOf="@id/fpc_spinner_ChargeType" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/priceIcon"
            style="@style/primaryIconTextViewStyle"
            android:layout_width="@dimen/dp48"
            android:layout_height="@dimen/dp48"
            android:layout_marginTop="@dimen/dp8"
            android:text="@string/coin_icon"
            android:textStyle="bold"
            android:visibility="@{viewModel.showDetail}"
            app:layout_constraintEnd_toEndOf="@id/phoneNumberIcon"
            app:layout_constraintStart_toStartOf="@id/phoneNumberIcon"
            app:layout_constraintTop_toBottomOf="@id/chargeTypeIcon" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/fpc_spinner_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp44"
            android:onItemSelected="@{(parent,view,position,id)->viewModel.onItemSelecteSpinerPrice(position)}"
            android:visibility="@{viewModel.showDetail}"
            app:layout_constraintBottom_toBottomOf="@id/priceIcon"
            app:layout_constraintEnd_toEndOf="@id/phoneNumberEditText"
            app:layout_constraintStart_toStartOf="@id/phoneNumberEditText"
            app:layout_constraintTop_toTopOf="@id/priceIcon" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/background_cancel_money_action"
            android:visibility="@{viewModel.showDetail}"
            app:layout_constraintBottom_toBottomOf="@id/fpc_spinner_price"
            app:layout_constraintEnd_toEndOf="@id/fpc_spinner_price"
            app:layout_constraintStart_toStartOf="@id/fpc_spinner_price"
            app:layout_constraintTop_toTopOf="@id/fpc_spinner_price" />

        <ProgressBar
            android:id="@+id/loadingView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp8"
            android:indeterminate="true"
            android:visibility="@{viewModel.observeEnabledPayment ? View.INVISIBLE : View.VISIBLE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/priceIcon" />

        <com.google.android.material.button.MaterialButton
            style="@style/iGapButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp8"
            android:enabled="@{viewModel.observeEnabledPayment}"
            android:onClick="@{()->viewModel.onBuyClick(phoneNumberEditText.getEditableText().toString())}"
            android:text="@string/buy"
            android:visibility="@{viewModel.showDetail}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/loadingView"
            app:layout_constraintWidth_percent=".6" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>