<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/kuknos_wh_list_item_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.9">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/kuknos_wHistoryCell_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="5"
            android:gravity="center"
            android:minHeight="38dp"
            android:text="To Amir"
            android:textColor="?iGapTitleTextColor"
            android:textSize="@dimen/dp12" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/kuknos_wHistoryCell_icon"
            style="@style/myIconTextViewStyle"
            android:layout_width="@dimen/dp20"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dp4"
            android:text="@string/download_ic"
            android:textColor="@color/buttonColor"
            android:textSize="@dimen/dp28" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/kuknos_wHistoryCell_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="4"
            android:gravity="center"
            android:minHeight="38dp"
            android:text="2018/06/15"
            android:textColor="?iGapTitleTextColor"
            android:textSize="@dimen/dp12" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/kuknos_wHistoryCell_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center"
            android:minHeight="38dp"
            android:text="2120"
            android:textColor="?iGapTitleTextColor"
            android:textSize="@dimen/dp12" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/kuknos_wHistoryCell_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="4"
            android:gravity="center"
            android:minHeight="38dp"
            android:text="20.012"
            android:textColor="?iGapTitleTextColor"
            android:textSize="@dimen/dp12" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>