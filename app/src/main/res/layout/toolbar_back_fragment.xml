<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/IGapRootViewStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <net.iGap.module.MyAppBarLayout
        android:id="@+id/ac_appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/iGapToolbarBackground"
        android:layoutDirection="ltr"
        app:elevation="0dp">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height">

            <net.iGap.libs.rippleeffect.RippleView
                android:id="@+id/chl_ripple_back_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp4"
                android:gravity="center"
                app:rv_alpha="200"
                app:rv_centered="true"
                app:rv_rippleDuration="0"
                app:rv_ripplePadding="5dp">

                <net.iGap.module.MaterialDesignTextView
                    style="@style/myIconToolbarStyle"
                    android:layout_width="@dimen/toolbar_icon_size"
                    android:layout_height="@dimen/toolbar_icon_size"
                    android:gravity="center"
                    android:text="@string/back_icon" />

            </net.iGap.libs.rippleeffect.RippleView>

            <net.iGap.module.CustomTextViewMedium
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/dp4"
                android:paddingLeft="@dimen/dp60"
                android:paddingRight="@dimen/dp60"
                android:singleLine="true"
                android:text=""
                android:textAppearance="@style/TextIconAppearance_toolbar"
                android:textColor="@android:color/white"
                android:textSize="@dimen/largeTextSize" />


            <net.iGap.module.MaterialDesignTextView
                android:id="@+id/menu_item1"
                style="@style/myIconToolbarStyle"
                android:layout_width="@dimen/contact_icon_size"
                android:layout_height="@dimen/toolbar_icon_size"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp10"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/delete_icon"
                android:visibility="visible" />


        </RelativeLayout>

    </net.iGap.module.MyAppBarLayout>

</LinearLayout>