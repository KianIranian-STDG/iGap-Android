<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/IGapRootViewStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="locale"
    tools:context=".kuknos.Fragment.KuknosGetSupportFrag">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginTop="24dp"
        android:layout_marginRight="@dimen/dp20"
        android:autoSizeTextType="uniform"
        android:text="در صورتی که 10.000 پیمان یا بیشتر در حساب خود موجودی دارید، درخواست بازخرید را از این قسمت ثبت نمایید و به ازای هر 10.000 پیمان، یک بسته طلای پشتوانه که یک شمش گرمی 24 عیار میباشد، دریافت کنید. کارمزد هر بسته 1.50 پیمان بوده که در زمان ثبت از حساب کاربر برداشته می شود."
        android:textColor="?iGapSubtitleTextColor"
        android:textSize="@dimen/standardTextSize"
        android:textStyle="bold"
        autofit:layout_constraintEnd_toEndOf="parent"
        autofit:layout_constraintHorizontal_bias="0.0"
        autofit:layout_constraintStart_toStartOf="parent"
        autofit:layout_constraintTop_toTopOf="parent" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        autofit:layout_constraintBottom_toTopOf="@+id/materialButton3"
        autofit:layout_constraintEnd_toEndOf="parent"
        autofit:layout_constraintHorizontal_bias="0.0"
        autofit:layout_constraintStart_toStartOf="parent"
        autofit:layout_constraintTop_toBottomOf="@+id/textView9"
        autofit:layout_constraintVertical_bias="0.147">

        <EditText
            android:layout_width="@dimen/dp220"
            android:layout_height="@dimen/dp40"
            android:layout_marginStart="@dimen/dp15"
            android:layout_marginLeft="@dimen/dp15"
            android:background="@drawable/button_round_shape_black"
            android:textColor="?iGapSubtitleTextColor"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/dp15"
            android:layout_marginRight="@dimen/dp15"
            android:text="تعداد بسته"
            android:textColor="?iGapSubtitleTextColor"
            android:textStyle="bold" />

    </FrameLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButton3"
        style="@style/iGapButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="88dp"
        android:minHeight="48dp"
        android:text="ذخیره"
        android:textSize="@dimen/standardTextSize"
        autofit:layout_constraintBottom_toBottomOf="parent"
        autofit:layout_constraintEnd_toEndOf="parent"
        autofit:layout_constraintHorizontal_bias="1.0"
        autofit:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>