<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.graphics.Color" />

        <import type="net.iGap.G" />

        <variable
            name="FragmentNotificationAndSoundViewModel"
            type="net.iGap.viewmodel.FragmentNotificationAndSoundViewModel" />
    </data>

    <LinearLayout
        style="@style/IGapRootViewStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            android:orientation="horizontal" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/dp16">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_title_messageNotification"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="@dimen/dp12"
                    android:text="@string/st_title_messageNotification"
                    android:textSize="@dimen/largeTextSize"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_alert"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp16"
                    android:gravity="start"
                    android:text="@string/st_alert"
                    android:textSize="@dimen/standardTextSize"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@id/view_alert"
                    app:layout_constraintEnd_toStartOf="@id/toggle_alert"
                    app:layout_constraintStart_toStartOf="@id/view_alert"
                    app:layout_constraintTop_toTopOf="@id/view_alert" />

                <net.iGap.module.CustomToggleButton
                    android:id="@+id/toggle_alert"
                    android:layout_width="@dimen/toggles_width"
                    android:layout_height="@dimen/toggles_height"
                    android:layout_margin="@dimen/dp16"
                    android:checked="@{FragmentNotificationAndSoundViewModel.isAlertMassage}"
                    android:gravity="end"
                    android:onCheckedChanged="@{(switch, checked) -> FragmentNotificationAndSoundViewModel.setAlertMessage(checked)}"
                    android:textOff=""
                    android:textOn=""
                    app:layout_constraintBottom_toBottomOf="@id/view_alert"
                    app:layout_constraintEnd_toEndOf="@id/view_alert"
                    app:layout_constraintTop_toTopOf="@id/view_alert" />

                <View
                    android:id="@+id/view_alert"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp48"
                    android:background="?attr/selectableItemBackground"
                    android:onClick="@{()->FragmentNotificationAndSoundViewModel.onClickAlertMessage()}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title_messageNotification" />

                <TextView
                    android:id="@+id/tv_messagePreview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp16"
                    android:gravity="start"
                    android:text="@string/st_messagePreview"
                    android:textSize="@dimen/standardTextSize"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@id/view_messagePreview"
                    app:layout_constraintEnd_toStartOf="@+id/toggle_messagePreview"
                    app:layout_constraintStart_toStartOf="@id/view_messagePreview"
                    app:layout_constraintTop_toTopOf="@+id/view_messagePreview" />

                <net.iGap.module.CustomToggleButton
                    android:id="@+id/toggle_messagePreview"
                    android:layout_width="@dimen/toggles_width"
                    android:layout_height="@dimen/toggles_height"
                    android:layout_margin="@dimen/dp16"
                    android:checked="@{FragmentNotificationAndSoundViewModel.isMassagePreview}"
                    android:gravity="end"
                    android:onCheckedChanged="@{(switch, checked) -> FragmentNotificationAndSoundViewModel.setMessagePreview(checked)}"
                    android:textOff=""
                    android:textOn=""
                    app:layout_constraintBottom_toBottomOf="@id/view_messagePreview"
                    app:layout_constraintEnd_toEndOf="@id/view_messagePreview"
                    app:layout_constraintTop_toTopOf="@id/view_messagePreview" />

                <View
                    android:id="@+id/view_messagePreview"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp48"
                    android:background="?attr/selectableItemBackground"
                    android:onClick="@{()->FragmentNotificationAndSoundViewModel.onClickMessagePreView()}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_alert" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp16"
                    android:gravity="start"
                    android:text="@string/st_led_color"
                    android:textSize="@dimen/standardTextSize"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@id/ll_led_message"
                    app:layout_constraintEnd_toStartOf="@+id/iv_led_message"
                    app:layout_constraintStart_toStartOf="@+id/ll_led_message"
                    app:layout_constraintTop_toTopOf="@id/ll_led_message" />

                <ImageView
                    android:id="@+id/iv_led_message"
                    android:layout_width="@dimen/dp16"
                    android:layout_height="@dimen/dp16"
                    android:layout_margin="@dimen/dp16"
                    android:background="@drawable/circle_color_notificatin_setting"
                    android:gravity="end"
                    app:layout_constraintBottom_toBottomOf="@id/ll_led_message"
                    app:layout_constraintEnd_toEndOf="@+id/ll_led_message"
                    app:layout_constraintTop_toTopOf="@id/ll_led_message" />

                <View
                    android:id="@+id/ll_led_message"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp48"
                    android:background="?attr/selectableItemBackground"
                    android:onClick="@{()->FragmentNotificationAndSoundViewModel.onClickMessageLed()}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_messagePreview" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp16"
                    android:gravity="start"
                    android:text="@string/st_vibrate"
                    android:textSize="@dimen/standardTextSize"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@id/rl_vibration_message"
                    app:layout_constraintEnd_toStartOf="@+id/tv_vibration_message"
                    app:layout_constraintStart_toStartOf="@id/rl_vibration_message"
                    app:layout_constraintTop_toTopOf="@id/rl_vibration_message" />

                <TextView
                    android:id="@+id/tv_vibration_message"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp16"
                    android:gravity="end"
                    android:text="@{FragmentNotificationAndSoundViewModel.callbackVibrateMessage , default=@string/array_Default}"
                    android:textSize="@dimen/smallTextSize"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@id/rl_vibration_message"
                    app:layout_constraintEnd_toEndOf="@id/rl_vibration_message"
                    app:layout_constraintTop_toTopOf="@id/rl_vibration_message" />

                <View
                    android:id="@+id/rl_vibration_message"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp48"
                    android:background="?attr/selectableItemBackground"
                    android:onClick="@{()->FragmentNotificationAndSoundViewModel.onClickMessageVibration()}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ll_led_message" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp16"
                    android:gravity="start"
                    android:text="@string/st_popupNotification"
                    android:textSize="@dimen/standardTextSize"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@id/rl_pop_sound_message"
                    app:layout_constraintEnd_toStartOf="@+id/tv_pop_sound_message"
                    app:layout_constraintStart_toStartOf="@+id/rl_pop_sound_message"
                    app:layout_constraintTop_toTopOf="@id/rl_pop_sound_message" />

                <TextView
                    android:id="@+id/tv_pop_sound_message"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp16"
                    android:gravity="end"
                    android:text="@{FragmentNotificationAndSoundViewModel.callbackPopUpNotificationMessage}"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="@dimen/smallTextSize"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@id/rl_pop_sound_message"
                    app:layout_constraintEnd_toEndOf="@id/rl_pop_sound_message"
                    app:layout_constraintTop_toTopOf="@id/rl_pop_sound_message" />

                <View
                    android:id="@+id/rl_pop_sound_message"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp48"
                    android:background="?attr/selectableItemBackground"
                    android:onClick="@{()->FragmentNotificationAndSoundViewModel.onClickMessagePopUpNotification()}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rl_vibration_message" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp16"
                    android:gravity="start"
                    android:text="@string/st_sound"
                    android:textSize="@dimen/standardTextSize"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@id/rl_sound_message"
                    app:layout_constraintEnd_toStartOf="@id/tv_sound_message"
                    app:layout_constraintStart_toStartOf="@id/rl_pop_sound_message"
                    app:layout_constraintTop_toTopOf="@id/rl_sound_message" />

                <TextView
                    android:id="@+id/tv_sound_message"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp16"
                    android:gravity="end"
                    android:text="@{FragmentNotificationAndSoundViewModel.callbackSoundMessage,  default =@string/Default_Notification_tone}"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="@dimen/smallTextSize"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@id/rl_sound_message"
                    app:layout_constraintEnd_toEndOf="@id/rl_sound_message"
                    app:layout_constraintTop_toTopOf="@id/rl_sound_message" />

                <View
                    android:id="@+id/rl_sound_message"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp48"
                    android:background="?attr/selectableItemBackground"
                    android:onClick="@{()->FragmentNotificationAndSoundViewModel.onClickSoundMessage()}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rl_pop_sound_message" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="@dimen/dp10"
                    android:layout_marginEnd="@dimen/dp10"
                    android:background="@color/key_light_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rl_sound_message" />

                <TextView
                    android:id="@+id/tv_groupNotification"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="@dimen/dp12"
                    android:text="@string/st_title_groupNotification"
                    android:textSize="@dimen/largeTextSize"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view1" />


                <TextView
                    android:id="@+id/tv_alert_group"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp16"
                    android:gravity="start"
                    android:text="@string/st_alert"
                    android:textSize="@dimen/standardTextSize"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@id/view_alert_group"
                    app:layout_constraintEnd_toStartOf="@+id/toggle_alert_group"
                    app:layout_constraintStart_toStartOf="@id/view_alert_group"
                    app:layout_constraintTop_toTopOf="@+id/view_alert_group" />

                <net.iGap.module.CustomToggleButton
                    android:id="@+id/toggle_alert_group"
                    android:layout_width="@dimen/toggles_width"
                    android:layout_height="@dimen/toggles_height"
                    android:layout_margin="@dimen/dp16"
                    android:checked="@{FragmentNotificationAndSoundViewModel.isAlertGroup}"
                    android:gravity="end"
                    android:onCheckedChanged="@{(switch, checked) -> FragmentNotificationAndSoundViewModel.setAlertGroup(checked)}"
                    android:textOff=""
                    android:textOn=""
                    app:layout_constraintBottom_toBottomOf="@id/view_alert_group"
                    app:layout_constraintEnd_toEndOf="@id/view_alert_group"
                    app:layout_constraintTop_toTopOf="@+id/view_alert_group" />

                <View
                    android:id="@+id/view_alert_group"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp48"
                    android:background="?attr/selectableItemBackground"
                    android:onClick="@{()->FragmentNotificationAndSoundViewModel.onClickAlertGroup()}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_groupNotification" />


                <TextView
                    android:id="@+id/tv_messagePreview_group"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp16"
                    android:gravity="start"
                    android:text="@string/st_messagePreview"
                    android:textSize="@dimen/standardTextSize"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@id/view_messagePreview_group"
                    app:layout_constraintEnd_toStartOf="@+id/toggle_messagePreview_group"
                    app:layout_constraintStart_toStartOf="@+id/view_messagePreview_group"
                    app:layout_constraintTop_toTopOf="@id/view_messagePreview_group" />

                <net.iGap.module.CustomToggleButton
                    android:id="@+id/toggle_messagePreview_group"
                    android:layout_width="@dimen/toggles_width"
                    android:layout_height="@dimen/toggles_height"
                    android:layout_margin="@dimen/dp16"
                    android:checked="@{FragmentNotificationAndSoundViewModel.isGroupPreView}"
                    android:gravity="end"
                    android:onCheckedChanged="@{(switch, checked) -> FragmentNotificationAndSoundViewModel.setMessagePreviewGroup(checked)}"
                    android:textOff=""
                    android:textOn=""
                    app:layout_constraintBottom_toBottomOf="@id/view_messagePreview_group"
                    app:layout_constraintEnd_toEndOf="@+id/view_messagePreview_group"
                    app:layout_constraintTop_toTopOf="@id/view_messagePreview_group" />

                <View
                    android:id="@+id/view_messagePreview_group"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp48"
                    android:background="?attr/selectableItemBackground"
                    android:onClick="@{()->FragmentNotificationAndSoundViewModel.onClickMessagePreViewGroup()}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view_alert_group" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp16"
                    android:gravity="start"
                    android:text="@string/st_led_color"
                    android:textSize="@dimen/standardTextSize"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@id/ll_led_group"
                    app:layout_constraintEnd_toStartOf="@id/iv_led_group"
                    app:layout_constraintStart_toStartOf="@id/ll_led_group"
                    app:layout_constraintTop_toTopOf="@+id/ll_led_group" />

                <ImageView
                    android:id="@+id/iv_led_group"
                    android:layout_width="@dimen/dp16"
                    android:layout_height="@dimen/dp16"
                    android:layout_margin="@dimen/dp16"
                    android:background="@drawable/circle_color_notificatin_setting"
                    android:gravity="end"
                    app:layout_constraintBottom_toBottomOf="@id/ll_led_group"
                    app:layout_constraintEnd_toEndOf="@id/ll_led_group"
                    app:layout_constraintTop_toTopOf="@id/ll_led_group" />

                <View
                    android:id="@+id/ll_led_group"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp48"
                    android:background="?attr/selectableItemBackground"
                    android:onClick="@{()->FragmentNotificationAndSoundViewModel.onClickGroupLed()}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view_messagePreview_group" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp16"
                    android:gravity="start"
                    android:text="@string/st_vibrate"
                    android:textSize="@dimen/standardTextSize"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@id/rl_vibration_group"
                    app:layout_constraintEnd_toStartOf="@id/tv_vibration_group"
                    app:layout_constraintStart_toStartOf="@id/rl_vibration_group"
                    app:layout_constraintTop_toTopOf="@id/rl_vibration_group" />

                <TextView
                    android:id="@+id/tv_vibration_group"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp16"
                    android:gravity="end"
                    android:text="@{FragmentNotificationAndSoundViewModel.callbackVibrateGroup}"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="@dimen/smallTextSize"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@id/rl_vibration_group"
                    app:layout_constraintEnd_toEndOf="@id/rl_vibration_group"
                    app:layout_constraintTop_toTopOf="@id/rl_vibration_group" />

                <View
                    android:id="@+id/rl_vibration_group"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp48"
                    android:background="?attr/selectableItemBackground"
                    android:onClick="@{()->FragmentNotificationAndSoundViewModel.onClickGroupVibration()}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ll_led_group" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp16"
                    android:gravity="start"
                    android:text="@string/st_popupNotification"
                    android:textSize="@dimen/standardTextSize"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@+id/rl_pop_sound_group"
                    app:layout_constraintEnd_toStartOf="@id/tv_pop_sound_group"
                    app:layout_constraintStart_toStartOf="@+id/rl_pop_sound_group"
                    app:layout_constraintTop_toTopOf="@+id/rl_pop_sound_group" />

                <TextView
                    android:id="@+id/tv_pop_sound_group"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp16"
                    android:gravity="end"
                    android:text="@{FragmentNotificationAndSoundViewModel.callbackPopUpNotificationGroup}"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="@dimen/smallTextSize"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@+id/rl_pop_sound_group"
                    app:layout_constraintEnd_toEndOf="@+id/rl_pop_sound_group"
                    app:layout_constraintTop_toTopOf="@+id/rl_pop_sound_group" />

                <View
                    android:id="@+id/rl_pop_sound_group"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp48"
                    android:background="?attr/selectableItemBackground"
                    android:onClick="@{()->FragmentNotificationAndSoundViewModel.onClickGroupPopUpNotification()}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rl_vibration_group" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp16"
                    android:gravity="start"
                    android:text="@string/st_sound"
                    android:textSize="@dimen/standardTextSize"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@id/rl_sound_group"
                    app:layout_constraintEnd_toStartOf="@id/tv_sound_group"
                    app:layout_constraintStart_toStartOf="@id/rl_sound_group"
                    app:layout_constraintTop_toTopOf="@id/rl_sound_group" />

                <TextView
                    android:id="@+id/tv_sound_group"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp16"
                    android:gravity="end"
                    android:text="@{FragmentNotificationAndSoundViewModel.callBackSoundGroup , default =@string/Default_Notification_tone}"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="@dimen/dp12"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@id/rl_sound_group"
                    app:layout_constraintEnd_toEndOf="@id/rl_sound_group"
                    app:layout_constraintTop_toTopOf="@id/rl_sound_group" />

                <View
                    android:id="@+id/rl_sound_group"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp48"
                    android:background="?attr/selectableItemBackground"
                    android:onClick="@{()->FragmentNotificationAndSoundViewModel.onClickSoundGroup()}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rl_pop_sound_group" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_margin="@dimen/dp10"
                    android:background="@color/key_light_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_sound_group" />

                <TextView
                    android:id="@+id/title_sound_app"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="@dimen/dp12"
                    android:text="@string/st_title_in_app_notification"
                    android:textSize="@dimen/largeTextSize"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view2" />


                <TextView
                    android:id="@+id/tv_sound_app"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dp16"
                    android:gravity="start"
                    android:text="@string/st_in_app_sound"
                    android:textSize="@dimen/standardTextSize"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@id/view_sound_app"
                    app:layout_constraintEnd_toStartOf="@+id/toggle_sound_app"
                    app:layout_constraintStart_toStartOf="@id/view_sound_app"
                    app:layout_constraintTop_toTopOf="@id/view_sound_app" />

                <net.iGap.module.CustomToggleButton
                    android:id="@+id/toggle_sound_app"
                    android:layout_width="@dimen/toggles_width"
                    android:layout_height="@dimen/toggles_height"
                    android:layout_margin="@dimen/dp16"
                    android:checked="@{safeUnbox(FragmentNotificationAndSoundViewModel.isAppSound)}"
                    android:gravity="end"
                    android:onCheckedChanged="@{(switch, checked) -> FragmentNotificationAndSoundViewModel.onCheckedChangedAppSound(checked)}"
                    android:textOff=""
                    android:textOn=""
                    app:layout_constraintBottom_toBottomOf="@id/view_sound_app"
                    app:layout_constraintEnd_toEndOf="@id/view_sound_app"
                    app:layout_constraintTop_toTopOf="@id/view_sound_app" />

                <View
                    android:id="@+id/view_sound_app"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp48"
                    android:background="?attr/selectableItemBackground"
                    android:onClick="@{()->FragmentNotificationAndSoundViewModel.onClickInAppSound()}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title_sound_app" />

                <TextView
                    android:id="@+id/tv_vibration_app"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp16"
                    android:gravity="start"
                    android:text="@string/st_in_app_vibrate"
                    android:textSize="@dimen/standardTextSize"
                    android:textStyle="normal"
                    app:layout_constraintBottom_toBottomOf="@id/view_vibration_app"
                    app:layout_constraintEnd_toStartOf="@id/toggle_vibration_app"
                    app:layout_constraintStart_toStartOf="@id/view_vibration_app"
                    app:layout_constraintTop_toTopOf="@id/view_vibration_app" />

                <net.iGap.module.CustomToggleButton
                    android:id="@+id/toggle_vibration_app"
