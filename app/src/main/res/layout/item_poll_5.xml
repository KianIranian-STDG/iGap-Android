<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_item5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/discovery_margin"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/type5_card2"
        app:layout_constraintHorizontal_weight="4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/type5_card0"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="@dimen/discovery_radius"
            app:cardPreventCornerOverlap="false">

            <ImageView
                android:id="@+id/type5_img0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@color/color_default_discovery_cards" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/type5_tick0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/tick_background_color"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/icon_sent"
                style="@style/myIconToolbarStyle"
                android:textColor="@color/white"
                android:visibility="gone" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/type5_card1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/discovery_margin_top_nested"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="@dimen/discovery_radius"
            app:cardPreventCornerOverlap="false">

            <ImageView
                android:id="@+id/type5_img1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@color/color_default_discovery_cards" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/type5_tick1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/tick_background_color"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/icon_sent"
                style="@style/myIconToolbarStyle"
                android:textColor="@color/white"
                android:visibility="gone" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/type5_card2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/discovery_margin"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/discovery_radius"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="6"
        app:layout_constraintStart_toEndOf="@+id/ll_item5"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/type5_img2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@color/color_default_discovery_cards" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/type5_tick2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/tick_background_color"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/icon_sent"
            style="@style/myIconToolbarStyle"
            android:textColor="@color/white"
            android:visibility="gone" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>