<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp48">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/amount_contact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:ellipsize="end"
        android:gravity="center_vertical|left"
        android:maxLength="15"
        android:text="100000 ریال"
        android:textColor="?iGapSubtitleTextColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/number_contact"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="5" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/number_contact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:ellipsize="end"
        android:gravity="clip_vertical|right"
        android:maxLength="15"
        android:textColor="?iGapSubtitleTextColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/amount_contact"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="5"
        tools:text="091211111111" />

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="?iGapDividerLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>