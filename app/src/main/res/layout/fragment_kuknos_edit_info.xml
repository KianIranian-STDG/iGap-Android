<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context=".kuknos.Fragment.KuknosEditInfoFrag">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/national_code"
            android:textAlignment="textEnd"
            android:textColor="?iGapSubtitleTextColor"
            android:textSize="@dimen/standardTextSize"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/kuknos_editInfo_nationalCode"
            app:layout_constraintEnd_toEndOf="@+id/kuknos_editInfo_nationalCode"
            app:layout_constraintStart_toStartOf="@+id/kuknos_editInfo_nationalCode"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintVertical_chainStyle="packed" />

        <EditText
            android:id="@+id/kuknos_editInfo_nationalCode"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp40"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/button_round_shape_black"
            android:textColor="?iGapSubtitleTextColor"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/kuknos_edit_info_birthday"
            android:textAlignment="textEnd"
            android:textColor="?iGapSubtitleTextColor"
            android:textSize="@dimen/standardTextSize"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/kuknos_editInfo_birthDay"
            app:layout_constraintEnd_toEndOf="@+id/kuknos_editInfo_birthDay"
            app:layout_constraintStart_toStartOf="@+id/kuknos_editInfo_birthDay"
            app:layout_constraintTop_toBottomOf="@+id/kuknos_editInfo_nationalCode" />

        <EditText
            android:id="@+id/kuknos_editInfo_birthDay"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp40"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/button_round_shape_black"
            android:textColor="?iGapSubtitleTextColor"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/fac_First_Name"
            android:textAlignment="textEnd"
            android:textColor="?iGapSubtitleTextColor"
            android:textSize="@dimen/standardTextSize"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/kuknos_editInfo_name"
            app:layout_constraintEnd_toEndOf="@+id/kuknos_editInfo_name"
            app:layout_constraintStart_toStartOf="@+id/kuknos_editInfo_name"
            app:layout_constraintTop_toBottomOf="@+id/kuknos_editInfo_birthDay" />

        <EditText
            android:id="@+id/kuknos_editInfo_name"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp40"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/button_round_shape_black"
            android:textColor="?iGapSubtitleTextColor"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/fac_Last_Name"
            android:textAlignment="textEnd"
            android:textColor="?iGapSubtitleTextColor"
            android:textSize="@dimen/standardTextSize"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/kuknos_editInfo_lastName"
            app:layout_constraintEnd_toEndOf="@+id/kuknos_editInfo_lastName"
            app:layout_constraintStart_toStartOf="@+id/kuknos_editInfo_lastName"
            app:layout_constraintTop_toBottomOf="@+id/kuknos_editInfo_name" />

        <EditText
            android:id="@+id/kuknos_editInfo_lastName"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp40"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/button_round_shape_black"
            android:textColor="?iGapSubtitleTextColor"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/IBAN"
            android:textAlignment="textEnd"
            android:textColor="?iGapSubtitleTextColor"
            android:textSize="@dimen/standardTextSize"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/kuknos_editInfo_shaba"
            app:layout_constraintEnd_toEndOf="@+id/kuknos_editInfo_shaba"
            app:layout_constraintStart_toStartOf="@+id/kuknos_editInfo_shaba"
            app:layout_constraintTop_toBottomOf="@+id/kuknos_editInfo_lastName" />

        <EditText
            android:id="@+id/kuknos_editInfo_shaba"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp40"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/button_round_shape_black"
            android:textColor="?iGapSubtitleTextColor"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/fragKuknosEditInfoSubmit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fragKuknosEditInfoSubmit"
            style="@style/iGapButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:minHeight="48dp"
            android:text="ذخیره"
            android:textSize="@dimen/standardTextSize"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/kuknos_editInfo_shaba" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>