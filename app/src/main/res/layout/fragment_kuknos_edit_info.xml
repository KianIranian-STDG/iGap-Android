<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/IGapRootViewStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="locale"
    tools:context=".kuknos.Fragment.KuknosEditInfoFrag">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/national_code"
            android:textColor="?iGapSubtitleTextColor"
            android:textSize="@dimen/standardTextSize"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/kuknos_editInfo_nationalCode"
            app:layout_constraintStart_toStartOf="@+id/kuknos_editInfo_nationalCode"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintVertical_chainStyle="packed" />

        <EditText
            android:id="@+id/kuknos_editInfo_nationalCode"
            style="@style/iGapEditTextStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp40"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/button_round_shape_black"
            android:paddingStart="@dimen/dp10"
            android:paddingLeft="@dimen/dp10"
            android:textColor="?iGapSubtitleTextColor"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/kuknos_editInfo_birthDate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/kuknos_editInfo_birthDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/kuknos_edit_info_birthday"
            android:textColor="?iGapSubtitleTextColor"
            android:textSize="@dimen/standardTextSize"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/kuknos_editInfo_birthDate_editText"
            app:layout_constraintStart_toStartOf="@+id/kuknos_editInfo_birthDate_editText"
            app:layout_constraintTop_toBottomOf="@+id/kuknos_editInfo_nationalCode" />

        <EditText
            android:id="@+id/kuknos_editInfo_birthDate_editText"
            style="@style/iGapEditTextStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp40"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/button_round_shape_black"
            android:paddingStart="@dimen/dp10"
            android:paddingLeft="@dimen/dp10"
            android:textColor="?iGapSubtitleTextColor"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/kuknos_editInfo_birthDate" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/fac_First_Name"
            android:textColor="?iGapSubtitleTextColor"
            android:textSize="@dimen/standardTextSize"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/kuknos_editInfo_name"
            app:layout_constraintStart_toStartOf="@+id/kuknos_editInfo_name"
            app:layout_constraintTop_toBottomOf="@+id/kuknos_editInfo_birthDate" />

        <EditText
            android:id="@+id/kuknos_editInfo_name"
            style="@style/iGapEditTextStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp40"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/button_round_shape_black"
            android:paddingStart="@dimen/dp10"
            android:paddingLeft="@dimen/dp10"
            android:textColor="?iGapSubtitleTextColor"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/fac_Last_Name"
            android:textColor="?iGapSubtitleTextColor"
            android:textSize="@dimen/standardTextSize"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/kuknos_editInfo_lastName"
            app:layout_constraintStart_toStartOf="@+id/kuknos_editInfo_lastName"
            app:layout_constraintTop_toBottomOf="@+id/kuknos_editInfo_name" />

        <EditText
            android:id="@+id/kuknos_editInfo_lastName"
            style="@style/iGapEditTextStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp40"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/button_round_shape_black"
            android:paddingStart="@dimen/dp10"
            android:paddingLeft="@dimen/dp10"
            android:textColor="?iGapSubtitleTextColor"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/IBAN"
            android:textColor="?iGapSubtitleTextColor"
            android:textSize="@dimen/standardTextSize"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/kuknos_editInfo_shaba"
            app:layout_constraintStart_toStartOf="@+id/kuknos_editInfo_shaba"
            app:layout_constraintTop_toBottomOf="@+id/kuknos_editInfo_lastName" />

        <EditText
            android:id="@+id/kuknos_editInfo_shaba"
            style="@style/iGapEditTextStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp40"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/button_round_shape_black"
            android:paddingStart="@dimen/dp10"
            android:paddingLeft="@dimen/dp10"
            android:textColor="?iGapSubtitleTextColor"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/fragKuknosEditInfoSubmit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fragKuknosEditInfoSubmit"
            style="@style/iGapButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:minHeight="48dp"
            android:text="ذخیره"
            android:textSize="@dimen/standardTextSize"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/kuknos_editInfo_shaba" />

        <ProgressBar
            android:id="@+id/fragKuknosEditInfoProgressV"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:elevation="2dp"
            android:indeterminateTint="@color/white"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/fragKuknosEditInfoSubmit"
            app:layout_constraintEnd_toEndOf="@+id/fragKuknosIdSubmit"
            app:layout_constraintHeight_percent="0.08"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="@+id/fragKuknosEditInfoSubmit"
            app:layout_constraintTop_toTopOf="@+id/fragKuknosEditInfoSubmit" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>