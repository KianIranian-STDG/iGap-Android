<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/iv_itemContactCall_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp70">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/iv_itemContactChat_ll"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >


        <CheckBox
            android:id="@+id/iv_itemContactCall_checkBox"
            android:layout_width="@dimen/dp36"
            android:layout_height="@dimen/dp36"
            android:layout_marginRight="@dimen/dp20"
            android:layout_marginLeft="@dimen/dp20"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_itemContactCall_profileImage"
            android:layout_width="@dimen/dp52"
            android:layout_height="@dimen/dp52"
            android:layout_marginStart="@dimen/dp24"
            android:layout_marginLeft="@dimen/dp24"
            android:background="@drawable/shape_background_profile_sample"/>


    </LinearLayout>

    <net.iGap.module.MaterialDesignTextView
        android:id="@+id/tv_itemContactCall_videoCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp16"
        android:layout_marginRight="@dimen/dp16"
        android:paddingRight="@dimen/dp8"
        android:paddingLeft="@dimen/dp8"
        android:text="@string/md_videocam"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <net.iGap.module.MaterialDesignTextView
        android:id="@+id/tv_itemContactCall_voiceCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp16"
        android:layout_marginRight="@dimen/dp16"
        android:text="@string/md_call_made"
        android:paddingRight="@dimen/dp8"
        android:paddingLeft="@dimen/dp8"
        app:layout_constraintBottom_toBottomOf="@+id/tv_itemContactCall_videoCall"
        app:layout_constraintEnd_toStartOf="@+id/tv_itemContactCall_videoCall"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tv_itemContactCall_userName"
        app:layout_constraintTop_toTopOf="@+id/tv_itemContactCall_videoCall"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_itemContactCall_userName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="contact name"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:fontFamily="@font/main_font"
        app:layout_constraintBottom_toTopOf="@+id/tv_itemContactCall_userPhoneNumber"
        app:layout_constraintStart_toStartOf="@+id/tv_itemContactCall_userPhoneNumber"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_itemContactCall_userPhoneNumber"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp20"
        android:layout_marginStart="@dimen/dp16"
        android:layout_marginLeft="@dimen/dp16"
        android:fontFamily="@font/main_font"
        android:text="09xxxxxxxxx"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_itemContactChat_ll"
        app:layout_constraintTop_toBottomOf="@+id/tv_itemContactCall_userName" />


</android.support.constraint.ConstraintLayout>