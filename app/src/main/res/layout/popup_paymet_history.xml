<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/IGapRootViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/dp16"
    android:paddingEnd="@dimen/dp16">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/iv_close2"
        style="@style/myIconTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp16"
        android:text="@string/close_icon"
        android:textColor="?iGapSubtitleTextColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_choose2"
        style="?iGapTitleTextColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="@dimen/dp8"
        android:text="@string/Select_from_previous_numbers"
        android:textColor="?iGapSubtitleTextColor"
        app:layout_constraintBottom_toBottomOf="@+id/iv_close2"
        app:layout_constraintStart_toEndOf="@+id/iv_close2"
        app:layout_constraintTop_toTopOf="@+id/iv_close2" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_close2"
        app:layout_constraintEnd_toEndOf="@+id/txt_choose2"
        app:layout_constraintStart_toStartOf="@+id/iv_close2"
        app:layout_constraintTop_toTopOf="@+id/iv_close2" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_history"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp300"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="@dimen/dp24"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="@dimen/dp16"
        android:background="@drawable/search_contact_background_light"
        android:padding="@dimen/dp2"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_choose2" />

</androidx.constraintlayout.widget.ConstraintLayout>