<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp16"
    android:id="@+id/mainContainer">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/stickerGift"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp52"
        android:background="?attr/selectableItemBackgroundBorderless">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/giftStickerIcon"
            style="@style/baseFontIcon"
            android:layout_width="@dimen/dp52"
            android:layout_height="@dimen/dp52"
            android:text="@string/icon_send_money"
            android:textSize="@dimen/xlargeTextSize"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/buyDigitalGiftCard"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:padding="@dimen/dp8"
            android:text="@string/gift_sticker_title"
            android:textSize="@dimen/largeTextSize"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/giftStickerIcon"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardToCard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp52"
        android:background="?attr/selectableItemBackgroundBorderless">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/cardToCardIcon"
            style="@style/baseFontIcon"
            android:layout_width="@dimen/dp52"
            android:layout_height="match_parent"
            android:text="@string/icon_charge_wallet"
            android:textSize="@dimen/xlargeTextSize"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/requestCardToCard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="@dimen/dp8"
            android:text="@string/card_to_card"
            android:textSize="@dimen/largeTextSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cardToCardIcon"
            tools:layout_editor_absoluteY="0dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/transferMoney"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp52"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:visibility="gone">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/transferMoneyIcon"
            style="@style/baseFontIcon"
            android:layout_width="@dimen/dp52"
            android:layout_height="@dimen/dp52"
            android:text="@string/icon_send_money"
            android:textSize="@dimen/xlargeTextSize"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/walletMoneyTransfer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="@dimen/dp8"
            android:text="@string/WALLET_TRANSFER_MONEY"
            android:textSize="@dimen/largeTextSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/transferMoneyIcon"
            tools:layout_editor_absoluteY="0dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chargePayment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp52"
        android:background="?attr/selectableItemBackgroundBorderless">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/chargePaymentIcon"
            style="@style/baseFontIcon"
            android:layout_width="@dimen/dp52"
            android:layout_height="@dimen/dp52"
            android:text="@string/icon_charge_mobile"
            android:textSize="@dimen/xlargeTextSize"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/buyingTheCharge"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="@dimen/dp8"
            android:text="@string/topUp_title"
            android:textSize="@dimen/largeTextSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/chargePaymentIcon"
            tools:layout_editor_absoluteY="0dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/internetPayment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp52"
        android:background="?attr/selectableItemBackgroundBorderless">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/internetPaymentIcon"
            style="@style/baseFontIcon"
            android:layout_width="@dimen/dp52"
            android:layout_height="@dimen/dp52"
            android:text="@string/icon_internet"
            android:textSize="@dimen/xlargeTextSize"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/buyInternetPackage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="@dimen/dp8"
            android:text="@string/buy_internet_package_title"
            android:textSize="@dimen/largeTextSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/internetPaymentIcon"
            tools:layout_editor_absoluteY="0dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>