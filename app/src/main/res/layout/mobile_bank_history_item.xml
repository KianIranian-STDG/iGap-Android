<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/container"
        android:layout_marginStart="@dimen/dp16"
        android:layout_marginEnd="@dimen/dp16"
        android:layout_marginTop="@dimen/dp8"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="?attr/iGapCardViewColor">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/myIconTextViewStyleGray"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/status_ic"
                android:text="@string/icon_withdrawing_money_from_card"
                android:textSize="@dimen/dp36"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/dp16"
                android:layout_marginLeft="@dimen/dp16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:text="Pay"
                android:textSize="@dimen/largeTextSize"
                android:layout_marginTop="@dimen/dp8"
                android:layout_marginStart="@dimen/dp16"
                android:layout_marginEnd="@dimen/dp16"
                android:textColor="?iGapTitleTextColor"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/status_ic" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/amount"
                android:text="+10,000"
                android:textSize="@dimen/largeTextSize"
                android:layout_marginTop="@dimen/dp8"
                android:layout_marginStart="@dimen/dp8"
                android:layout_marginEnd="@dimen/dp8"
                android:textColor="?iGapTitleTextColor"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/arrow" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/myIconTextViewStyleGray"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/arrow"
                android:text="@string/icon_chevron_Down"
                android:textSize="@dimen/dp32"
                android:textColor="@color/black"
                android:rotation="270"
                android:layout_margin="@dimen/dp4"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time"
                android:text="2020/12/14 - 10:10"
                android:textSize="@dimen/smallTextSize"
                android:layout_marginTop="@dimen/dp4"
                android:layout_marginStart="@dimen/dp16"
                android:layout_marginEnd="@dimen/dp16"
                android:layout_marginBottom="@dimen/dp8"
                android:textColor="?iGapTitleTextColor"
                app:layout_constraintTop_toBottomOf="@+id/title"
                app:layout_constraintStart_toEndOf="@+id/status_ic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
