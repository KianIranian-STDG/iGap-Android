<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/type7_card0"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/discovery_margin"
        android:layout_weight="1"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="?attr/iGapCardViewColor"
        app:cardCornerRadius="@dimen/discovery_radius"
        app:cardPreventCornerOverlap="false">

        <ImageView
            android:id="@+id/type7_img0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/type7_card1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/discovery_margin"
        android:layout_weight="1"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="?attr/iGapCardViewColor"
        app:cardCornerRadius="@dimen/discovery_radius"
        app:cardPreventCornerOverlap="false">

        <ImageView
            android:id="@+id/type7_img1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/type7_card2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/discovery_margin"
        android:layout_weight="1"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="?attr/iGapCardViewColor"
        app:cardCornerRadius="@dimen/discovery_radius"
        app:cardPreventCornerOverlap="false">

        <ImageView
            android:id="@+id/type7_img2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY" />

    </androidx.cardview.widget.CardView>


</LinearLayout>