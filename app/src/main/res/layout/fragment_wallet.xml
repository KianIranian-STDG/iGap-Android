<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.graphics.Color" />

        <import type="net.iGap.G" />

        <variable
            name="fragmentWalletViewModel"
            type="net.iGap.viewmodel.FragmentWalletViewModel" />

        <variable
            name="backHandler"
            type="net.iGap.observers.interfaces.IBackHandler" />


    </data>

    <LinearLayout
        style="@style/IGapRootViewStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp60"
                android:background="?attr/iGapToolbarBackground"
                android:layoutDirection="ltr"
                android:padding="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <net.iGap.libs.rippleeffect.RippleView
                        rv_centered="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="@{()-> backHandler.onBack()}"
                        app:rv_alpha="200"
                        app:rv_centered="true"
                        app:rv_rippleDuration="0"
                        app:rv_ripplePadding="5dp">

                        <net.iGap.module.MaterialDesignTextView
                            android:layout_width="@dimen/dp52"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/md_back_arrow"
                            android:textAppearance="@style/TextIconAppearance_toolbar"
                            android:textColor="@color/whit_background" />
                    </net.iGap.libs.rippleeffect.RippleView>

                    <TextView
                        android:fontFamily="@font/main_font_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/wallet"
                        android:textColor="@color/whit_background"
                        android:textSize="@dimen/dp18"
                        android:textStyle="normal"
                        android:visibility="visible" />
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>


    </LinearLayout>
</layout>