<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragKuknosRKSContainer"
        style="@style/IGapRootViewStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/fragKuknosRKSToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragKuknosRKSToolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:paddingBottom="@dimen/dp20">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/fragKuknosRKSLanguageTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:justificationMode="inter_word"
                    android:text="@string/kuknos_RecoverySK_languageTitle"
                    android:textColor="?iGapTitleTextColor"
                    android:textSize="@dimen/dp16"
                    app:layout_constraintBottom_toBottomOf="@+id/spinner_language"
                    app:layout_constraintStart_toStartOf="@+id/fragKuknosRKSDescription"
                    app:layout_constraintTop_toTopOf="@+id/spinner_language" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinner_language"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:minHeight="@dimen/dp36"
                    android:onItemSelected="@{(parent,view,position,id)->viewmodel.onItemSelectSpinnerLanguage(position)}"
                    app:layout_constraintEnd_toEndOf="@+id/fragKuknosRKSDescription"
                    app:layout_constraintTop_toBottomOf="@+id/fragKuknosRKSDescription"
                    app:layout_constraintWidth_percent="0.25" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/background_cancel_money_action"
                    app:layout_constraintBottom_toBottomOf="@id/spinner_language"
                    app:layout_constraintEnd_toEndOf="@id/spinner_language"
                    app:layout_constraintStart_toStartOf="@id/spinner_language"
                    app:layout_constraintTop_toTopOf="@id/spinner_language" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/fragKuknosRKSLengthTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:justificationMode="inter_word"
                    android:text="@string/kuknos_RecoverySK_lengthTitle"
                    android:textColor="?iGapTitleTextColor"
                    android:textSize="@dimen/dp16"
                    app:layout_constraintBottom_toBottomOf="@+id/spinner_length"
                    app:layout_constraintStart_toStartOf="@+id/fragKuknosRKSDescription"
                    app:layout_constraintTop_toTopOf="@+id/spinner_length" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinner_length"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp4"
                    android:minHeight="@dimen/dp36"
                    android:onItemSelected="@{(parent,view,position,id)->viewmodel.onItemSelectSpinnerLength(position)}"
                    app:layout_constraintEnd_toEndOf="@+id/fragKuknosRKSDescription"
                    app:layout_constraintTop_toBottomOf="@+id/spinner_language"
                    app:layout_constraintWidth_percent="0.25" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/background_cancel_money_action"
                    app:layout_constraintBottom_toBottomOf="@id/spinner_length"
                    app:layout_constraintEnd_toEndOf="@id/spinner_length"
                    app:layout_constraintStart_toStartOf="@id/spinner_length"
                    app:layout_constraintTop_toTopOf="@id/spinner_length" />


                <ProgressBar
                    android:id="@+id/fragKuknosRKSProgressV"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:elevation="2dp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="@+id/fragKuknosIdSubmit"
                    app:layout_constraintEnd_toEndOf="@+id/fragKuknosIdSubmit"
                    app:layout_constraintHeight_percent="0.06"
                    app:layout_constraintHorizontal_bias="0.05"
                    app:layout_constraintStart_toStartOf="@+id/fragKuknosIdSubmit"
                    app:layout_constraintTop_toTopOf="@+id/fragKuknosIdSubmit" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/fragKuknosIdSubmit"
                    style="@style/iGapButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:minHeight="58dp"
                    android:onClick="@{()->viewmodel.onNext()}"
                    android:text="@string/kuknos_RecoverySK_Btn"
                    android:textSize="@dimen/dp16"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fragKuknosRKSkeysET"
                    app:layout_constraintWidth_percent="0.7" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fragKuknosRKSkeysET"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:enabled="false"
                    android:gravity="top"
                    android:maxHeight="200dp"
                    android:minHeight="200dp"
                    android:layoutDirection="ltr"
                    android:padding="8dp"
                    android:orientation="vertical"
                    android:scrollbars="vertical"
                    android:scrollHorizontally="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/spinner_length"
                    app:layout_constraintWidth_percent="0.8" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/fragKuknosRKSMessage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="@string/kuknos_RecoverySK_Title"
                    android:textColor="?iGapTitleTextColor"
                    android:textSize="@dimen/dp18"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.7" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/fragKuknosRKSDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:justificationMode="inter_word"
                    android:text="@string/kuknos_RecoverySK_Message"
                    android:textColor="?iGapTitleTextColor"
                    android:textSize="@dimen/dp16"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fragKuknosRKSMessage"
                    app:layout_constraintWidth_percent="0.7" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.50121653" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <data>

        <import type="android.view.View" />

        <variable
            name="viewmodel"
            type="net.iGap.kuknos.viewmodel.KuknosShowRecoveryKeyVM" />
    </data>
</layout>