<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="net.iGap.G" />
        <import type="net.iGap.module.Theme" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp8"
            android:layout_marginLeft="@dimen/dp8"
            android:layout_marginEnd="@dimen/dp8"
            android:layout_marginRight="@dimen/dp8"
            android:layout_marginTop="@dimen/dp4"
            android:layout_marginBottom="@dimen/dp4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintDimensionRatio="3:1"
            app:cardCornerRadius="3dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@{G.themeColor == Theme.DARK ? @color/chat_item_receive_dark : @color/kuknos_WH_itembg}">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <net.iGap.module.RadiusImageView
                    android:id="@+id/image"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@mipmap/news_temp_icon"
                    android:layout_marginRight="@dimen/dp8"
                    android:layout_marginBottom="@dimen/dp8"
                    android:layout_marginTop="@dimen/dp8"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    app:riv_radius="3dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintWidth_percent="0.3"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp24"
                    android:text="123"
                    android:textSize="@dimen/dp12"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:singleLine="true"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/dp8"
                    app:layout_constraintBottom_toBottomOf="@+id/image"
                    app:layout_constraintRight_toRightOf="@+id/image"
                    app:layout_constraintVertical_chainStyle="packed"/>

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/myIconTextViewStyleGray"
                    android:id="@+id/view_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp24"
                    android:text="@string/icon_eye"
                    android:textSize="@dimen/dp20"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/dp2"
                    android:layout_marginLeft="@dimen/dp8"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="@+id/view"
                    app:layout_constraintBottom_toBottomOf="@+id/view"
                    app:layout_constraintRight_toLeftOf="@+id/view"/>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/source"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp24"
                    android:text="Source"
                    android:textSize="@dimen/dp12"
                    android:textColor="@color/news_red"
                    android:gravity="center|right"
                    android:layout_marginRight="@dimen/dp8"
                    app:layout_constraintTop_toTopOf="@+id/image"
                    app:layout_constraintRight_toLeftOf="@+id/image"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp24"
                    android:text="date"
                    android:textSize="@dimen/dp12"
                    android:gravity="left"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginLeft="@dimen/dp8"
                    android:textColor="?attr/iGapTitleTextColor"
                    app:layout_constraintTop_toTopOf="@+id/source"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constraintRight_toLeftOf="@+id/source"/>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/rootTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp24"
                    android:text="Root Title"
                    android:textSize="@dimen/dp12"
                    android:ellipsize="end"
                    android:gravity="center|right"
                    android:layout_marginTop="@dimen/dp8"
                    android:layout_marginLeft="@dimen/dp8"
                    android:textColor="?attr/iGapTitleTextColor"
                    app:layout_constraintRight_toRightOf="@+id/source"
                    app:layout_constraintTop_toBottomOf="@+id/source"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/title"
                    app:layout_constraintVertical_chainStyle="packed"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp24"
                    android:text="Title"
                    android:textSize="@dimen/dp14"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:lines="2"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:gravity="center|right"
                    android:layout_marginTop="@dimen/dp4"
                    android:layout_marginLeft="@dimen/dp8"
                    app:layout_constraintRight_toRightOf="@+id/source"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rootTitle"
                    app:layout_constraintBottom_toBottomOf="@+id/image"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>