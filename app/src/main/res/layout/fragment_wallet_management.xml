<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/IGapRootViewStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/iGapWalletDarkerBackground">

    <FrameLayout
        android:id="@+id/toolbar_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_vertical_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/dp24" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end_vertical_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/dp24" />

    <View
        android:id="@+id/white_view_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp220"
        android:background="@drawable/background_white_bottom_shadow"
        app:layout_constraintTop_toBottomOf="@id/toolbar_container" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cash_pocket_button"
        style="@style/iGapButton"
        android:layout_width="150dp"
        android:layout_height="@dimen/dp100"
        android:gravity="center"
        android:text="@string/cash_pocket"
        app:layout_constraintBottom_toTopOf="@id/cards_pocket_button"
        app:layout_constraintEnd_toStartOf="@id/credit_pocket_button"
        app:layout_constraintStart_toStartOf="@id/start_vertical_guideline"
        app:layout_constraintTop_toTopOf="@id/white_view_1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/credit_pocket_button"
        style="@style/iGapButton"
        android:layout_width="150dp"
        android:layout_height="@dimen/dp100"
        android:gravity="center"
        android:text="@string/credit_pocket"
        app:layout_constraintBottom_toTopOf="@id/currency_pocket_button"
        app:layout_constraintEnd_toEndOf="@id/end_vertical_guideline"
        app:layout_constraintStart_toEndOf="@id/cash_pocket_button"
        app:layout_constraintTop_toTopOf="@id/white_view_1" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/simple_white_background_whit_center_gradient"
        android:elevation="2dp"
        android:gravity="center"
        android:text="@string/soon"
        android:textColor="#5E0101"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/credit_pocket_button"
        app:layout_constraintStart_toStartOf="@id/credit_pocket_button"
        app:layout_constraintTop_toTopOf="@id/credit_pocket_button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cards_pocket_button"
        style="@style/iGapButton"
        android:layout_width="150dp"
        android:layout_height="@dimen/dp100"
        android:gravity="center"
        android:text="@string/cards_pocket"
        app:layout_constraintBottom_toBottomOf="@id/white_view_1"
        app:layout_constraintEnd_toStartOf="@id/currency_pocket_button"
        app:layout_constraintStart_toStartOf="@id/start_vertical_guideline"
        app:layout_constraintTop_toBottomOf="@id/cash_pocket_button" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/simple_white_background_whit_center_gradient"
        android:elevation="2dp"
        android:gravity="center"
        android:text="@string/soon"
        android:textColor="#5E0101"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/cards_pocket_button"
        app:layout_constraintStart_toStartOf="@id/cards_pocket_button"
        app:layout_constraintTop_toTopOf="@id/cards_pocket_button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/currency_pocket_button"
        style="@style/iGapButton"
        android:layout_width="150dp"
        android:layout_height="@dimen/dp100"
        android:gravity="center"
        android:text="@string/currency_pocket"
        app:layout_constraintBottom_toBottomOf="@id/white_view_1"
        app:layout_constraintEnd_toEndOf="@id/end_vertical_guideline"
        app:layout_constraintStart_toEndOf="@id/cards_pocket_button"
        app:layout_constraintTop_toBottomOf="@id/credit_pocket_button" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/simple_white_background_whit_center_gradient"
        android:elevation="2dp"
        android:gravity="center"
        android:text="@string/soon"
        android:textColor="#5E0101"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/currency_pocket_button"
        app:layout_constraintStart_toStartOf="@id/currency_pocket_button"
        app:layout_constraintTop_toTopOf="@id/currency_pocket_button" />

    <TextView
        android:id="@+id/FAQ_icon"
        style="@style/myIconTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        android:text="@string/icon_FAQ"
        app:layout_constraintStart_toStartOf="@id/start_vertical_guideline"
        app:layout_constraintTop_toBottomOf="@id/white_view_1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        android:text="@string/faq"
        android:textColor="?attr/iGapPrimaryTextColor"
        app:layout_constraintStart_toEndOf="@id/FAQ_icon"
        app:layout_constraintTop_toBottomOf="@id/white_view_1" />


</androidx.constraintlayout.widget.ConstraintLayout>