<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="net.iGap.kuknos.viewmodel.KuknosBuyPeymanVM" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/IGapRootViewStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/fragKuknosBuyPToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragKuknosBuyPToolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:paddingBottom="@dimen/dp20">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/fragKuknosBuyPTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="@string/kuknos_buyP_title"
                    android:textColor="?iGapTitleTextColor"
                    android:textSize="@dimen/dp18"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.7" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/fragKuknosBuyPMessage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:justificationMode="inter_word"
                    android:text="@string/kuknos_buyP_message"
                    android:textColor="?iGapTitleTextColor"
                    android:textSize="@dimen/dp16"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fragKuknosBuyPTitle"
                    app:layout_constraintWidth_percent="0.7" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/fragKuknosBuyPAmountHolder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:minHeight="48dp"
                    android:textColorHint="?iGapSubtitleTextColor"
                    android:hint="@string/kuknos_buyP_amount"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fragKuknosBuyPPrice"
                    app:layout_constraintWidth_percent="0.7">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/fragKuknosBuyPAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:afterTextChanged="@{()->viewmodel.updateSum()}"
                        android:digits="0123456789."
                        android:ems="10"
                        android:gravity="center"
                        android:imeOptions="actionDone"
                        android:inputType="numberDecimal"
                        android:lines="1"
                        android:maxLines="1"
                        android:minHeight="48dp"
                        android:text="@={viewmodel.amount}"
                        android:enabled="@{viewmodel.amountEnable}"
                        android:textColor="?iGapTitleTextColor"
                        android:textSize="@dimen/dp18" />
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/fragKuknosBuyPPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp10"
                    android:layout_marginRight="@dimen/dp10"
                    android:text="@{viewmodel.assetPrice}"
                    android:textColor="?iGapTitleTextColor"
                    android:textSize="@dimen/dp16"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fragKuknosBuyPMessage" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/fragKuknosBuyPSumTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp10"
                    android:layout_marginRight="@dimen/dp10"
                    android:text="@string/kuknos_buyP_sumTitle"
                    android:textColor="?iGapTitleTextColor"
                    android:textSize="@dimen/dp18"
                    app:layout_constraintBottom_toBottomOf="@+id/fragKuknosBuyPSum"
                    app:layout_constraintEnd_toStartOf="@+id/fragKuknosBuyPSum"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/fragKuknosBuyPSum" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/fragKuknosBuyPSum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:text="@={viewmodel.sum}"
                    android:textColor="?iGapTitleTextColor"
                    android:textSize="@dimen/dp18"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/fragKuknosBuyPSumCurrency"
                    app:layout_constraintStart_toEndOf="@+id/fragKuknosBuyPSumTitle"
                    app:layout_constraintTop_toBottomOf="@+id/fragKuknosBuyPAmountHolder" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/fragKuknosBuyPSumCurrency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kuknos_buyP_sumCurrency"
                    android:textColor="?iGapTitleTextColor"
                    android:textSize="@dimen/dp18"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/fragKuknosBuyPSum"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/fragKuknosBuyPSum"
                    app:layout_constraintTop_toTopOf="@+id/fragKuknosBuyPSum" />

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/fragKuknosBuyPSumGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:constraint_referenced_ids="fragKuknosBuyPSum,fragKuknosBuyPSumTitle,fragKuknosBuyPSumCurrency" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/termsAndConditionCheck"
                    android:layout_marginTop="10dp"
                    android:button="@drawable/check_box_background"
                    android:onCheckedChanged="@{(v,isChecked)->viewmodel.termsOnCheckChange(isChecked)}"
                    app:layout_constraintStart_toStartOf="@+id/fragKuknosBuyPAmountHolder"
                    app:layout_constraintTop_toBottomOf="@+id/fragKuknosBuyPSum" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/termsAndConditionText"
                    android:layout_marginStart="@dimen/dp6"
                    android:layout_marginLeft="@dimen/dp6"
                    android:text="@string/ok"
                    android:textColor="?iGapSubtitleTextColor"
                    app:layout_constraintStart_toEndOf="@+id/termsAndConditionCheck"
                    app:layout_constraintEnd_toEndOf="@+id/fragKuknosBuyPAmountHolder"
                    app:layout_constraintTop_toBottomOf="@+id/termsAndConditionCheck"
                    app:layout_constraintBottom_toTopOf="@+id/termsAndConditionCheck" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/fragKuknosBuyPSubmit"
                    style="@style/iGapButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:minHeight="58dp"
                    android:onClick="@{()->viewmodel.onSubmitBtn()}"
                    android:text="@string/kuknos_buyP_btn"
                    android:textSize="@dimen/dp16"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/termsAndConditionCheck"
                    app:layout_constraintWidth_percent="0.6" />

                <ProgressBar
                    android:id="@+id/fragKuknosBuyPProgressV"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:elevation="2dp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="@+id/fragKuknosBuyPSubmit"
                    app:layout_constraintEnd_toEndOf="@+id/fragKuknosBuyPSubmit"
                    app:layout_constraintHeight_percent="0.06"
                    app:layout_constraintHorizontal_bias="0.05"
                    app:layout_constraintStart_toStartOf="@+id/fragKuknosBuyPSubmit"
                    app:layout_constraintTop_toTopOf="@+id/fragKuknosBuyPSubmit" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/fragKuknosBuyPPS"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:justificationMode="inter_word"
                    android:text="@string/kuknos_buyP_desc"
                    android:textColor="?iGapTitleTextColor"
                    android:textSize="14dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fragKuknosBuyPSubmit"
                    app:layout_constraintWidth_percent="0.7" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>