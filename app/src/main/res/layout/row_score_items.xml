<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp16"
    android:layout_marginEnd="@dimen/dp16"
    android:layoutDirection="locale">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/row_score_txt_title"
        android:textColor="?iGapTitleTextColor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textSize="@dimen/standardTextSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/row_score_txt_score_count"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/row_score_txt_score_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="@color/buttonColor"
        android:textSize="@dimen/standardTextSize"
        app:layout_constraintEnd_toStartOf="@id/addIcon"
        app:layout_constraintTop_toTopOf="@id/row_score_txt_title" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/addIcon"
        style="@style/myIconTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/icon_add_whit_circle"
        android:textColor="@color/green"
        app:layout_constraintBottom_toBottomOf="@id/row_score_txt_score_count"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/row_score_txt_score_count" />

</androidx.constraintlayout.widget.ConstraintLayout>