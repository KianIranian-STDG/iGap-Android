<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="?backgroundSubChatTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/dp140"
                android:layout_height="@dimen/dp140"
                android:contentDescription="@null"
                android:paddingTop="@dimen/dp15"
                app:srcCompat="@drawable/ic_crash" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:text="@string/iGap_has_crashed"
                    android:textAlignment="center"
                    android:textColor="?iGapTitleTextColor"
                    android:textSize="@dimen/dp18"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center"
                    android:lineSpacingExtra="1.0mm"
                    android:padding="@dimen/dp8"
                    android:text="@string/iGap_has_crashed_desc"
                    android:textAlignment="center"
                    android:textColor="?iGapTitleTextColor"
                    android:textSize="@dimen/dp14"
                    android:textStyle="bold" />


                <!--<TextView-->
                <!--android:id="@+id/error_details"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="6dp"-->
                <!--android:text="@string/E_2" />-->

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/restart_button"
                    style="?iGapButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="@dimen/dp10"
                    android:background="@color/green"
                    android:paddingLeft="@dimen/dp36"
                    android:paddingTop="@dimen/dp6"
                    android:paddingRight="@dimen/dp36"
                    android:paddingBottom="@dimen/dp6"
                    android:text="@string/iGap_has_crashed_reload"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp16" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>