<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="@dimen/dp4"
        android:left="@dimen/dp4"
        android:right="@dimen/dp4"
        android:top="@dimen/dp4">
        <shape android:shape="rectangle">

            <size
                android:width="@dimen/public_check_box_size"
                android:height="@dimen/public_check_box_size" />

            <stroke
                android:width="@dimen/dp1"
                android:color="@color/key_gray" />

            <corners android:radius="@dimen/dp4" />

        </shape>
    </item>

    <item
        android:bottom="@dimen/dp6"
        android:left="@dimen/dp6"
        android:right="@dimen/dp6"
        android:top="@dimen/dp6">
        <shape android:shape="rectangle">

            <solid android:color="?attr/colorAccent" />

            <corners android:radius="@dimen/dp4" />

        </shape>
    </item>

</layer-list>